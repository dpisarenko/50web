<h4>stats:</h4>
<form id="statadd" data-post="/person/<%= @person[:id] %>/stat.json" data-after="listStat">
	<input name="key" placeholder="key">
	<input name="value" placeholder="value">
	<input id="stataddbutton" type="submit" name="submit" value="add stat">
</form>
<ul id="statlist"></ul>
<script>
function listStat(s) {
	var li = document.createElement('li');
	li.id = 'stat-' + s.id;
	li.innerHTML = '<form data-post="/stat/' + s.id + '/delete.json" data-after="killStat">' +
		'<input type="submit" name="submit" value="x"></form>' +
		s.created_at.substring(0,10) + ' ' +
		s.name + ': ' +
		s.value;  // TODO: html escape
	document.getElementById('statlist').appendChild(li);
}
function killStat(s) {
	document.getElementById('statlist').removeChild(document.getElementById('stat-' + s.id));
}

<% if @person[:stats] %>
	<% @person[:stats].each do |stat| %>
		listStat(<%= stat.to_json %>);
	<% end %>
<% end %>
</script>

<h4>urls:</h4>
<form id="urladd" data-post="/person/<%= @person[:id] %>/url.json" data-after="listUrl">
	<input name="url" placeholder="url">
	<input id="urladdbutton" type="submit" name="submit" value="add url">
</form>
<ul id="urllist"></ul>
<script>
function formUrl(u) {
	return('<form data-post="/url/' + u.id + '/delete.json" data-after="killUrl">' +
	'<input type="submit" name="submit" value="x"></form>' +
	'<form data-post="/url/' + u.id + '.json" data-after="updateUrl">' +
	'<input type="hidden" name="star" value="' + (u.main ? 'f' : 't') + '">' +
	'<input type="submit" name="submit" value="' + (u.main ? '★' : '☆') + '">' +
	'<a href="/link?url=' + encodeURI(u.url) + '">' + u.url.replace(/^https?:\/\//, '') + '</a></form>');
}
function listUrl(u) {
	var li = document.createElement('li');
	li.id = 'url-' + u.id;
	li.innerHTML = formUrl(u);
	document.getElementById('urllist').appendChild(li);
}
function updateUrl(u) {
	document.getElementById('url-' + u.id).innerHTML = formUrl(u);
}
function killUrl(u) {
	document.getElementById('urllist').removeChild(document.getElementById('url-' + u.id));
}

<% if @person[:urls] %>
	<% @person[:urls].each do |url| %>
		listUrl(<%= url.to_json %>);
	<% end %>
<% end %>
</script>

