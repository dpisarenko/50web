	<% end %>
	</ul>
<% end %>

<script>

function ajaxIt(form) {
	var url = form.getAttribute('data-post');
	// use window[functionName] to get function from string
	var after = window[form.getAttribute('data-after')];
	form.elements['submit'].addEventListener('click', function(e) {
		e.preventDefault();
		var xhr = new XMLHttpRequest();
		xhr.onreadystatechange = function() {
			if(xhr.readyState == 4) {
				after(JSON.parse(xhr.responseText));
				form.reset();
			}
		};
		xhr.open('post', url, true);
		xhr.send(new FormData(form));
	}, false);
}

// ajax ALL the forms!!!!  (OK, just the ones with a data-post attribute)
function ajaxAll() {
	var forms = document.forms;
	var l = forms.length;
	for(var i=0; i < l; i++) {
		var f = forms[i];
		if(f.getAttribute('data-post')) {
			ajaxIt(f);
		}
	}
}

// TODO: ajaxIt for new forms added by eventListener
ajaxAll();

</script>
