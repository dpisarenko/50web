<!doctype html>
<html lang="<%= @lang %>" dir="<%= @dir %>">
<head>
<meta charset="utf-8">
<title><%= @pagetitle %></title>
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="stylesheet" href="/css/musicthoughts-201505.css" />
<% @rel_alternate.each do |l, u| %>
<link rel="alternate" hreflang="<%= l %>" href="<%= u %>" />
<% end %>
</head>
<body id="<%= @bodyid %>">
<div id="page">

<header id="bighead">
<hgroup>
<h1><a href="/"><%= t.musicthoughts %></a></h1>
<h2><%= t.musicthoughts_slogan %></h2>
</hgroup>

<nav id="nav">
<ul>
	<li><a href="/new"><%= t.new %></a></li>
	<li><a href="/author"><%= t.authors %></a></li>
	<li><a href="/contributor"><%= t.contributors %></a></li>
	<li><a href="/t"><%= t.random_thought %></a></li>
	<li><a href="/search"><%= t.search %></a></li>
	<li><a href="/add"><%= t.add_thought %></a></li>
</ul>
</nav>
</header>

<section id="content">

<%= yield %>

</section>

<footer id="bigfoot">
<nav id="langforms">
<ul>
	<li><form action="/lang" method="post"><input type="hidden" name="lang" value="en"><a href="/home/en">English</a></form></li>
	<li><form action="/lang" method="post"><input type="hidden" name="lang" value="es"><a href="/home/es">Español</a></form></li>
	<li><form action="/lang" method="post"><input type="hidden" name="lang" value="fr"><a href="/home/fr">Français</a></form></li>
	<li><form action="/lang" method="post"><input type="hidden" name="lang" value="de"><a href="/home/de">Deutsch</a></form></li>
	<li><form action="/lang" method="post"><input type="hidden" name="lang" value="it"><a href="/home/it">Italiano</a></form></li>
	<li><form action="/lang" method="post"><input type="hidden" name="lang" value="pt"><a href="/home/pt">Português</a></form></li>
	<li><form action="/lang" method="post"><input type="hidden" name="lang" value="ru"><a href="/home/ru">Русский</a></form></li>
	<li><form action="/lang" method="post"><input type="hidden" name="lang" value="ar"><a href="/home/ar">العربية</a></form></li>
	<li><form action="/lang" method="post"><input type="hidden" name="lang" value="ja"><a href="/home/ja">日本</a></form></li>
	<li><form action="/lang" method="post"><input type="hidden" name="lang" value="zh"><a href="/home/zh">中文</a></form></li>
</ul>
</nav>

<blockquote cite="http://musicthoughts.com/t/<%= @rand1[:id] %>">
	<q><%= @rand1[:thought] %></q>
	<cite><a href="/t/<%= @rand1[:id] %>"><%= @rand1[:author][:name] %></a></cite>
</blockquote>
</footer>

</div>
<script type="text/javascript">
function submitClick(event) {
	var event = event || window.event;
	var target = event.target || event.srcElement;
	if(event.preventDefault) {
		event.preventDefault();
	} else {
		event.returnValue = false;
	}
	target.previousSibling.form.submit();
}
var langforms = document.getElementById('langforms');
if(langforms.addEventListener) {
	langforms.addEventListener('click', submitClick, false);
} else {
	langforms.attachEvent('onclick', submitClick);
}
</script>
</body>
</html>

