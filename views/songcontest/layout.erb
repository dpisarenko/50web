</head>
<body>

<% if authorized? %>
<!--  NavBaR   -->
    <nav class="navbar navbar-default text-right" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapsemenu">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/<%= I18n.locale %>/main">
                	<p><%= I18n.t(:layout_title) %></p>
                </a>
            </div><!-- navbar-header -->
            <div class="collapse navbar-collapse navbar-right" id="collapsemenu">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/<%= I18n.locale %>/playback">Songs</a></li>
                    <li><a href="#blog">Blog</a></li>
                    <li><a href="#about">About</a></li>
                    <li><a class="logout" href="/<%= I18n.locale %>/logout"><%= I18n.t(:main_logout) %></a></li>
                </ul>
            </div><!-- collapse navbar-collapse -->
        </div><!-- container -->
    </nav>

<% end %>

