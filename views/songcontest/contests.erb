<h2 class="text-center"><%= I18n.t(:contests_title) %></h2>

<div class="container">
	<form action="/<%= I18n.locale %>/contests" method="post" role="form" role="form">
		<div class="center-block">
				<button type="submit" class="btn btn-info btn-block"><%= I18n.t(:contests_new_button) %></button>
			</div>
	</form>

	<table class="table table-hover">
		<thead>
			<tr>
				<th><%= I18n.t(:contests_nr) %></th>
				<th><%= I18n.t(:contests_title_table) %></th>
				<th><%= I18n.t(:contests_status) %></th>
			</tr>
		</thead>
		<% for @item in @contests %>
			<tbody>
				<tr>
					<td><a href="/<%= I18n.locale %>/contest_details?contest=<%= @item[:contest_id] %>"><%= @item[:contest_id] %></a></td>
					<td><%= @item[:contest_title] %></td>
					<td><%= @item[:contest_status] %></td>
				</tr>
			</tbody>
		<% end %>
	</table>
</div>